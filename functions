console.log('functions.js');

//rotate

let txt='ifrs';

//algoritmo (lógica);
txt= txt[txt.length-1] + txt.substr(0,3)
console.log(txt);
console.log (txt === 'sirf')//true
//assertiva/afirmação
console.assert(txt=='sirf');

//rotate
txt=txt[txt.length-1]+ txt.substr(0, txt.length-1)
console.log(txt === 'rsif')
 
//uma função "guarda" (encapsula um algoritmo)
//entrada(parâmentros)
//saida (retorno)

function rotate(txt){
const resp = txt[txt.length-1]+txt.substr(0, txt.length-1)
return resp;
} 
let palavra= 'laptop'
let teste= rotate(palavra)
console.log(teste);

